<%
	widget_title = "Group Events"
	@group = Group.find(@group_id)
%>

<% content_for :module_header do %>
	<div class="head_left">
		<%= image_tag('calendar.png', :alt=>'events', :align=>'absmiddle')%>&nbsp;&nbsp;<%= widget_title %>
	</div>
	<div class="head_right">
		<%= show_expand_collapse_btn %>
	</div>
	<div style="clear:both;"></div>
<% end %>

<% content_for :module_body do %>
	<div style="clear:both;"></div>
<% end %>

<% content_for :module_footer do %>
	<div class="foot_left">
		<% if logged_in? && current_user.is_group_admin(@group) %>
			<%= link_to 'Add Group Event', "/events/new?group_id=#{@group.id}" %>
		<% end %>
	</div>
	<div class="foot_right">
		<%= link_to 'View All', "/events?group_id=#{@group.id}" %>
	</div>
	<div style="clear:both;"></div>
<% end %>